
.menu-hamburguer{ /*para o menu-hamburguer sumir qd nao for menor que 700 */
    display: none;
}

@media(max-width:700px){ /* para mudar a barra qd eu diminuir a tela para esse tamanho */
    nav{
        display: none;
    }

    .menu-hamburguer{
        display: block;
    }
}

